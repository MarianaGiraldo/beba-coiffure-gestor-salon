# Development Dockerfile for Go backend with live reload
FROM golang:1.24.5-alpine3.22 AS development

# Install air for live reload and other dependencies
RUN go install github.com/air-verse/air@latest

# Set working directory
WORKDIR /app

# Install git and other dependencies
RUN apk add --no-cache git ca-certificates tzdata curl

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Create tmp directory for air
RUN mkdir -p tmp

# Copy air configuration
COPY .air.toml .

# Expose port
EXPOSE 8080

# Run air for live reload
CMD ["air"]
